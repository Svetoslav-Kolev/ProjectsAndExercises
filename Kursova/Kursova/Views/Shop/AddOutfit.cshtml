@model Kursova.ViewModels.AddOutfitModel

@{
    ViewData["Title"] = "AddOutfit";
}

<h1>AddOutfit</h1>

<h4>Outfits</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOutfit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OutfitName" class="control-label"></label>
                <input asp-for="OutfitName" class="form-control" />
                <span asp-validation-for="OutfitName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pieceOneId" class="control-label"></label>
                <select asp-for="pieceOneId" class="form-control">
                    @foreach (var clothing in Model.AllClothes)
                    {
                        <option value="@clothing.ClothingID">@clothing.ClothingName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="pieceTwoId" class="control-label"></label>
                <select asp-for="pieceTwoId" class="form-control">
                    @foreach (var clothing in Model.AllClothes)
                    {
                        <option value="@clothing.ClothingID">@clothing.ClothingName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="pieceThreeId" class="control-label"></label>
                <select asp-for="pieceThreeId" class="form-control">
                    @foreach (var clothing in Model.AllClothes)
                    {
                        <option value="@clothing.ClothingID">@clothing.ClothingName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

