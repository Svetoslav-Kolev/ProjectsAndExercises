@model Kursova.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order";
}

<h1>Order</h1>

<h4>OrderDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OrderClothing">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClothingID" class="control-label"></label>
                <input asp-for="ClothingID" class="form-control" />
                <span asp-validation-for="ClothingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionType" class="control-label"></label>
                <select asp-for="TransactionType" class="form-control" onchange="hideCardField()">
                    <option value="card">By Card</option>
                    <option value="delivery">Payment on delivery</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryAddress" class="control-label"></label>
                <input asp-for="DeliveryAddress" class="form-control" />
                <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
            </div>
            <div class="form-group" id="cardField">
                <label asp-for="CreditCardId" class="control-label"></label>
                <select asp-for="CreditCardId" class="form-control">
                    @foreach (CreditCard card in Model.yourCards)
                    {

                        <option value="@card.CreditCardID">@card.CardNumber</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script>
    function hideCardField() {
        if (document.getElementById("cardField").style.visibility == "hidden") {
            document.getElementById("cardField").style.visibility = "visible";
        }
        else
        {
            document.getElementById("cardField").style.visibility = "hidden"
        }
    }
</script>
